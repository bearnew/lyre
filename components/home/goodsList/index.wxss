.goods {
    display: flex;
    height: 120px;
    margin-bottom: 15px;
    overflow: hidden;
}
.goods .img {
    width: 130px;
}
.goods .img image {
    width: 130px;
}
.goods .content {
    flex: 1;
    padding-left: 5px;
    overflow: hidden;
}
.goods .title,
.goods .description {
    margin-bottom: 5px;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}
.goods .title {
    font-size: 16px;
    font-weight: bold;
}
.goods .description {
    color: #999;
}
.goods .sales {
    display: inline;
    padding: 0 5px;
    font-size: 12px;
    color: #ccc;
    border: 1px #ccc solid;
    border-radius: 10px;
}
.goods .footer {
    display: flex;
    margin-top: 12px;
    justify-content: space-between;
}
.goods .footer .price-box {
    color: #ff6054;
}
.price-box .price {
    margin-right: 10px;
    font-size: 18px;
    font-weight: bold;
}
.price-box .origin-price {
    font-size: 14px;
    color: #ccc;
    text-decoration: line-through;
}
.goods .purchase text {
    position: relative;
    top: 14px;
    padding: 5px 10px;
    font-size: 14px;
    color: #FFF;
    background: #ff6054;
    border-radius: 10px;
}