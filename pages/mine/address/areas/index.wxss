.areas {
    padding: 0 12px;
    font-size: 14px;
}
.areas .header {
    display: flex;
    margin-bottom: 10px;
}
.areas .header input {
    flex: 1;
    padding: 0 12px;
    background: #f3f3f3;
    border-radius: 4px;
    height: 40px;
}
.areas .search {
    margin-left: 12px;
    line-height: 40px;
    text-align: center;
}
.community {
    padding: 8px 0;
    border-bottom: 1px #f3f3f3 solid;
}
.community .name {
    font-size: 16px;
}
.community .address {
    color: #ccc;
}
